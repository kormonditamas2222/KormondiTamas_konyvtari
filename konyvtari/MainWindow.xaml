<Window x:Class="konyvtari.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:konyvtari"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBox x:Name="tbox_username" Text="A felhasználó neve: "/>
            <TextBox x:Name="tbox_age" Text="Életkor: "/>
            <TextBlock Text="Válaszd ki a kedvenc műfajod: " Margin="0, 0, 0, 10" FontWeight="Bold"/>
            <ComboBox x:Name="cmb_mufaj"/>
            <TextBlock Text="Szeretnél értesítéseket kapni? " Margin="0, 0, 0, 10" FontWeight="Bold"/>
            <CheckBox x:Name="cb_hirlevel" Content="Hírlevélen"/>
            <CheckBox x:Name="cb_sms" Content="SMS-értésítéseken kerszetül"/>
            <CheckBox x:Name="cb_ujsag" Content="Újságot szeretnék"/>
            <TextBlock Text="Válaszd ki a tagságod: " Margin="0, 0, 0, 10" FontWeight="Bold"/>
            <RadioButton x:Name="rb_diak" Content="Diák" GroupName="tagsag"/>
            <RadioButton x:Name="rb_felnott" Content="Felnőtt" GroupName="tagsag"/>
            <RadioButton x:Name="rb_nyugdijas" Content="Nyugdíjas" GroupName="tagsag"/>
            <Button x:Name="btn_be" Content="Mentés" Click="btn_be_Click"/>
            <TextBlock x:Name="txt_confirm"/>
            <ListBox x:Name="lb_nevek"/>
        </StackPanel>
    </Grid>
</Window>
